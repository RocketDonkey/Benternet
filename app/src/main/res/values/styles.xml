<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavBar" parent="@style/Theme.Benternet">
        <!-- Override the primary color so that the secondary is the 'active' color. -->
        <item name="colorPrimary">@color/secondaryLightColor</item>

        <!-- Background color. -->
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:backgroundTint">@color/primaryColor</item>

        <!-- Used to control the 'inactive' color. -->
        <item name="colorOnSurface">@color/colorOnPrimary</item>
    </style>
</resources>